@model IEnumerable<Employee>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @employee.id
                    </td>
                    <td>
                        @employee.name
                    </td>
                    <td>
                        @employee.Department
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div>
        <a asp-action="AddEmployee" class="btn btn-primary "> ADD MORE EMPLOYEE </a>
    </div>
   <br/>
    <div>
        <a asp-action="DeleteEmployee" class="btn btn-primary "> Delete EMPLOYEE </a>
    </div>
    